<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">



    <LinearLayout
        android:id="@+id/likesContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView

            android:id="@+id/likeBtn"
            app:srcCompat="@drawable/ic_like"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/likeCounterTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:text="Like"
            android:textSize="12dp"
            android:textAppearance="@style/TextAppearance.Second.Light"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/commentsCounterContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/intrinsic_padding"

        android:layout_marginLeft="90dp"
        android:paddingBottom="@dimen/intrinsic_padding"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/commentBtn"
            app:srcCompat="@drawable/ic_comments"
            android:layout_marginLeft="10dp"
            android:layout_width="21dp"
            android:layout_height="21dp" />

        <TextView
            android:id="@+id/commentsCountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comment"
            android:paddingLeft="@dimen/small_intrinsic_padding"
            android:textAppearance="@style/TextAppearance.Second.Light" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dateContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/intrinsic_padding"
        android:paddingBottom="@dimen/intrinsic_padding"
        android:paddingRight="@dimen/intrinsic_padding"
        android:gravity="center_vertical"
        android:orientation="horizontal">
    </LinearLayout>



    <LinearLayout
        android:id="@+id/shareContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/intrinsic_padding"
        android:paddingBottom="@dimen/intrinsic_padding"
        android:layout_marginLeft="80dp"
        android:paddingRight="@dimen/intrinsic_padding"
        android:gravity="right"
        android:orientation="horizontal">
    <ImageView
        android:id="@+id/shareBtn"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_marginLeft="0dp"
        app:srcCompat="@drawable/ic_shareee_black_24dp" />


        <TextView
            android:id="@+id/shareTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share"
            android:paddingLeft="@dimen/small_intrinsic_padding"
            android:textAppearance="@style/TextAppearance.Second.Light" />


    </LinearLayout>

</LinearLayout>